<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Cuentas de Préstamo</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <h1>Cuentas de Préstamo</h1>
    <h2>Agregar Nueva Cuenta de Préstamo</h2>
    <form action="/cuentas/prestamos" method="post">
        <label for="usuarioId">ID del Usuario:</label>
        <input type="number" id="usuarioId" name="usuarioId" required>
        <label for="balance">Balance:</label>
        <input type="number" id="balance" name="balance" required>
        <label for="tasaInteres">Tasa de Interés:</label>
        <input type="number" step="0.01" id="tasaInteres" name="tasaInteres" required>
        <label for="fechaProximoPago">Fecha del Próximo Pago:</label>
        <input type="date" id="fechaProximoPago" name="fechaProximoPago" required>
        <button type="submit">Agregar Cuenta</button>
    </form>

    <h2>Lista de Cuentas de Préstamo</h2>
    <ul>
        <% cuentas.forEach(function(cuenta) { if (cuenta.tipo === 'prestamo') { %>
            <li>
                ID: <%= cuenta.id %> - Usuario ID: <%= cuenta.usuarioId %> - Balance: <%= cuenta.balance %> - Tasa de Interés: <%= cuenta.tasaInteres %> - Próxima Fecha de Pago: <%= cuenta.fechaProximoPago %>
                <a href="/cuentas/prestamos/<%= cuenta.id %>/editar">Editar</a>
                <form action="/cuentas/prestamos/<%= cuenta.id %>?_method=DELETE" method="post" style="display:inline;">
                    <button type="submit">Eliminar</button>
                </form>
            </li>
        <% } }) %>
    </ul>
</body>
</html>
